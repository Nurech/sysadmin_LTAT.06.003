<VirtualHost *:80>
 ServerName wordpress.{{ hostname }}.{{ domain_name }}
 DocumentRoot /var/www/html/wordpress
 LogLevel debug

 ErrorLog /var/log/httpd/{{ hostname }}.{{ domain_name }}-error.log
 CustomLog /var/log/httpd/{{ hostname }}.{{ domain_name }}-access.log combined
</VirtualHost>

<VirtualHost *:443>
 ServerName wordpress.{{ hostname }}.{{ domain_name }}
 DocumentRoot /var/www/html/wordpress
 LogLevel debug

 SSLEngine On
 SSLCertificateFile /etc/pki/tls/certs/www_server.crt
 SSLCertificateKeyFile /etc/pki/tls/private/www_server.key
 SSLCACertificateFile /etc/pki/tls/certs/cacert.crt

 ErrorLog /var/log/httpd/{{ hostname }}.{{ domain_name }}-error.log
 CustomLog /var/log/httpd/{{ hostname }}.{{ domain_name }}-access.log combined
</VirtualHost>
